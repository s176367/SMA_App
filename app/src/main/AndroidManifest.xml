<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sma">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_logo19"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/app_logo19"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity.ActivityAddNewContact" />
        <activity android:name=".Profile.ActivityForgotPassword" />
        <activity android:name=".Profile.ActivityLogin"
            android:theme="@style/TextInputLayout.HintText">
        </activity>
        <activity android:name=".Profile.ActivityProfile" />
        <activity android:name=".Profile.ActivityRegister"
            android:theme="@style/TextInputLayout.HintText">
        </activity>
        <activity android:name=".Overview.ActivityEditTopic" />
        <activity android:name=".MainActivity.ActivityMain" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateMeeting.ActivityCreateMeeting" />
        <activity android:name=".Overview.ActivityOverview" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>