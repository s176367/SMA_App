<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_green_dark">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="177dp"
        android:layout_height="155dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo_m" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-5dp"
        android:textColorHint="@color/specialWhite"
        app:hintTextAppearance="@style/TextInputLayout.HintText"
        android:backgroundTint="@android:color/white"

        >


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_ET_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>







    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:textColorHint="@color/specialWhite"
        app:hintTextAppearance="@style/TextInputLayout.HintText"
        android:backgroundTint="@android:color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_ET_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/specialWhite"
        app:hintTextAppearance="@style/TextInputLayout.HintText"
        android:backgroundTint="@android:color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_ET_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/specialWhite"
        app:hintTextAppearance="@style/TextInputLayout.HintText"
        android:backgroundTint="@android:color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_ET_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/specialWhite"
        app:hintTextAppearance="@style/TextInputLayout.HintText"
        android:backgroundTint="@android:color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_ET_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zipcode"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/specialWhite"
        app:hintTextAppearance="@style/TextInputLayout.HintText"
        android:backgroundTint="@android:color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_ET_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="@color/common_google_signin_btn_text_dark_default">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="170dp"
        android:text="Login here, if your are registered!"
        android:textColor="#FFFFFFFF"/>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:background="@drawable/rounded_buttons"
        android:text="Register"
        android:textColor="@android:color/white"/>


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginEnd="182dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible" />


</LinearLayout>