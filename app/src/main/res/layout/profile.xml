<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilPicture"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile">

    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/profileName"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="Your name"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileName"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:text="Your email "
            android:textColor="@android:color/white" />

       <TextView
           android:id="@+id/work"
           android:layout_width="267dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/profileEmail"
           android:layout_centerHorizontal="true"
           android:textSize="16dp"
           android:fontFamily="@font/adamina"
           android:gravity="center"
           android:text="Work position"
           android:textColor="@android:color/white" />

       <TextView
           android:id="@+id/profilePhone"
           android:layout_width="267dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/work"
           android:layout_centerHorizontal="true"
           android:textSize="16dp"
           android:fontFamily="@font/adamina"
           android:gravity="center"
           android:text="Phone number"
           android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text_Description"
        android:layout_width="273dp"
        android:layout_height="101dp"
        android:layout_below="@+id/profilePhone"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:textSize="16dp"
        android:text="Profile description"
        android:textColor="@android:color/white" />




           <Button
               android:id="@+id/but_addCo"
               android:layout_width="145dp"
               android:layout_height="39dp"
               android:layout_marginTop="30dp"
               android:layout_alignLeft="@id/text_Description"
               android:layout_marginLeft="-30dp"
               android:layout_below="@id/text_Description"

               android:background="@drawable/add_coworker"
               android:textColor="@android:color/black" />

               <Button
                   android:id="@+id/message"
                   android:layout_width="145dp"
                   android:layout_height="39dp"
                   android:layout_marginTop="30dp"
                   android:layout_below="@+id/text_Description"
                   android:layout_alignRight="@+id/text_Description"
                   android:layout_marginRight="-30dp"
                   android:background="@drawable/message" />


                <Button
                   android:id="@+id/but_edit"
                   android:layout_width="263dp"
                   android:layout_height="46dp"
                   android:background="@drawable/editprofile"
                    android:layout_below="@+id/message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                   android:textColor="@android:color/black" />



</RelativeLayout>

